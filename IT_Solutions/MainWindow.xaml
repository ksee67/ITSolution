<Window x:Class="IT_Solutions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT_Solutions"
        mc:Ignorable="d"
        Title="Техносервис" Height="450" Width="800">
    <Grid Background="#FFE4E585">
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="56" FontWeight="Bold" Foreground="White" FontSize="35"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,293,0,0" VerticalAlignment="Top" Click="Button_Click" Height="40" Width="134"/>
        <TextBox Name="pbLogin" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="320" ToolTip="Введите Логин" Height="30" />
        <PasswordBox Name="pbPassword"  HorizontalAlignment="Center" Margin="0,212,0,0" VerticalAlignment="Top" Width="320" ToolTip="Введите пароль" Height="31" />

    </Grid>
</Window>
